@model IEnumerable<Admin.Models.VagaViewModel>

@{
    ViewBag.Title = "_listarOportunidades";
}




    <div class="card stacked-form">
        <div class="card-header ">
            <h4 class="card-title">Escolha o evento</h4>
        </div>
        <div class="card-body table-full-width table-responsive">
            <table id="tbOportunidades" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Data</th>
                        <th>Horário</th>
                        <th>Nome</th>
                        <th>Profissional</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.DataEvento.ToShortDateString()
                            </td>
                            <td>
                                @item.Hora
                            </td>
                            <td>
                                @item.Nome
                            </td>
                            <td>
                                @item.ProfissionalNome
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/CheckIn/Index?optId=@item.Id">CheckIn</a>
                            </td>
                            <td class="td-actions text-right">
                                <a onclick="getModalMatch(@item.Id)" class="btn btn-link btn-primary table-action view">
                                    <i class="nc-icon nc-single-02" />
                                </a>
                                <a class="btn btn-link btn-success table-action view" href="@Url.Action("Cadastrar", "Vaga", item)">
                                    <i class="nc-icon nc-tap-01" />
                                </a>
                                <a class="btn btn-link btn-danger table-action view" href="@Url.Action("Remover", "Vaga", item)">
                                    <i class="nc-icon nc-simple-remove" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer ">
        </div>
    </div>
