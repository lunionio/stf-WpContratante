
@{
    ViewBag.Title = "CADASTRAR EVENTO";
    ViewBag.PageTitle = "EVENTOS";
}

@model Admin.Models.VagaViewModel

<div class="row">
    <div class="col-md-12">
        <div id="miolo" class="card strpied-tabled-with-hover card-wizard">
            <div class="card-header text-center">
                <h4 class="text-center">Informe os dados</h4>
                <input type="hidden" id="vagaId" value="@Model.Id" />
                <input type="hidden" id="vagaData" value="@Model.DataCriacao" />
                <input type="hidden" id="enderecoData" value="@Model.EnderecoDataCriacao" />
            </div>

            <div class="card-body ">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab1" role="tabpanel">
                        <form method="get" action="/" class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-2 control-label">NOME DO EVENTO (*)</label>
                                        <div class="col-sm-10">
                                            <input type="text" id="nome" name="Nome" value="@Model.Nome" placeholder="Digite o nome do evento" class="form-control">
                                            @*<small class="form-text text-muted">A block of help text that breaks onto a new line.</small>*@
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset class="pnEndereco">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-2 control-label">CEP - Localiza automaticamente (*)</label>
                                        <div class="col-sm-2">
                                            <input type="hidden" id="endId" value="@Model.EnderecoId" />
                                            <input type="text" id="cep" value="@Model.Cep" name="CEP" placeholder="00000-000" class="form-control">
                                            @*<small class="form-text text-muted">A block of help text that breaks onto a new line.</small>*@
                                        </div>
                                        <label class="col-sm-3 control-label">ENDEREÇO (*)</label>
                                        <div class="col-sm-5">
                                            <input type="text" id="rua" value="@Model.Rua" name="Rua" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset class="pnEndereco">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-2 control-label">NÚMERO</label>
                                        <div class="col-sm-2">
                                            <input type="text" value="@Model.NumeroString" id="numero" name="Numero" placeholder="EX 500" class="form-control">
                                        </div>
                                        <label class="col-sm-3 control-label">COMPLEMENTO</label>
                                        <div class="col-sm-5">
                                            <input type="text" id="complemento" value="@Model.Complemento" name="Complemento" placeholder="EX Apto 100" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            @*<fieldset class="pnEndereco">
                                    <div class="form-group">
                                        <div class="row">
                                            <label class="col-sm-2 control-label">REFERÊNCIA </label>
                                            <div class="col-sm-10">
                                                <input type="text" id="referencia" value="@Model.Referencia" name="Numero" placeholder="Prox ao..." class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>*@

                            <fieldset class="pnEndereco">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-2 control-label">BAIRRO (*)</label>
                                        <div class="col-sm-2">
                                            <input type="text" id="bairro" value="@Model.Bairro" name="Bairro" placeholder="" class="form-control">
                                        </div>
                                        <label class="col-sm-2 control-label">CIDADE (*)</label>
                                        <div class="col-sm-2">
                                            <input type="text" id="cidade" value="@Model.Cidade" name="CIdade" placeholder="Ex. São Paulo" disabled="disabled" class="form-control">
                                        </div>
                                        <label class="col-sm-2 control-label">UF (*)</label>
                                        <div class="col-sm-2">
                                            <input type="text" id="uf" value="@Model.Uf" name="UF" placeholder="Ex. SP" disabled="disabled" class="form-control">
                                        </div>

                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-2 control-label">DATA (*)</label>
                                        <div class="col-md-2">
                                            @*@Html.TextBoxFor(m => m.DataEvento, "{0:dd/MM/yyyy}", new { type = "date", id = "data", @class = "form-control datepicker", required = true })*@
                                            @Html.TextBoxFor(u => u.DataEvento, "{0:dd-MM-yyyy}", new { name = "data", id = "data", type = "date", @class = "form-control", @value = Model.DataEvento.ToString("yyyy-MM-dd") })

                                            @*<input type="date" value="@Model.DataEvento.ToShortDateString()" id="data" required name="Data" class="form-control datepicker">*@
                                        </div>
                                        <label class="col-sm-3 control-label">HORA DE INÍCIO</label>
                                        <div class="col-md-2">
                                            <input id="txtHoraInicio" type="time" value="@Model.Hora" required ame="Data" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset class="">
                                <div class="form-group">
                                    <div id="loadSelect" class="row">
                                        <label class="col-sm-2 control-label">ÁREA DE ATUAÇÃO (*)</label>
                                        <div class="col-md-4">
                                            <input type="hidden" id="areaSelected" value="@Model.AreaAtuacao" />
                                            <select id="atuacao" data-title="Selecione" name="currency"
                                                    class="selectpicker" data-style="btn-default btn-outline"
                                                    data-menu-style="dropdown-blue">
                                                <option value="0">Selecione</option>
                                            </select>
                                        </div>
                                        <label class="col-sm-2 pnProfissional control-label">PROFISSIONAL (*)</label>
                                        <div class="col-md-4">
                                            <input type="hidden" id="profissionalSelected" value="@Model.Profissional" />
                                            <select id="profissional" name="Profissional" data-title="Selecione"
                                                    name="currency" class="selectpicker pnProfissional" data-style="btn-default btn-outline"
                                                    data-menu-style="dropdown-blue">
                                                <option value="0">Selecione</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="pnValores col-sm-1 control-label">VALOR (*)</label>
                                        <div class="pnValores col-md-2">
                                            <input type="text" id="valor" value="@Model.Valor" required name="Valor" class="form-control">
                                        </div>
                                        <label class="pnValores col-sm-3 control-label">QTD PROFISSIONAIS (*)</label>
                                        <div class="pnValores col-md-1">
                                            <input type="number" id="qtd" placeholder="1" value="@Model.Qtd" required ame="Qtd" class="form-control">
                                        </div>
                                        <label class=" pnValores col-sm-3 control-label"><strong>VALOR TOTAL</strong></label>
                                        <div class=" pnValores col-md-2">
                                            <input type="text" id="total" value="@Model.Total" disabled="disabled" class="form-control">

                                        </div>
                                    </div>
                                </div>

                            </fieldset>


                        </form>
                        <div class="row">
                            <div class="col-md-10"></div>
                            <div class="col-md-2">
                                <button type="button" id="cadastrar" class="pnValores btn btn-primary btn-wd">Cadastrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>


<div id="modal"></div>


@section Scripts
{
    <script src="~/Scripts/Plugins/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/Pages/Vaga.js"></script>
}
