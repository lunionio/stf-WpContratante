
@{
    ViewBag.Title = "EDITAR USUÁRIO";
    ViewBag.PageTitle = "USUÁRIOS";
}
@model Admin.Models.UsuarioViewModel

<div class="row">
    <div class="col-md-12">
        <div id="miolo" class="card strpied-tabled-with-hover card-wizard">

            <div class="card-header text-center">
                <h4 class="text-center">EDITAR USUÁRIO</h4>
            </div>

            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab1" role="tabpanel">

                        @using (Html.BeginForm("AltararUsuario", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.HiddenFor(u => u.VAdmin)
                            @Html.HiddenFor(u => u.ID)
                            @Html.HiddenFor(u => u.IdEmpresa)
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Nome">Nome do Usário</label>
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(u => u.Nome, new { placeholder = "Nome do usuário", name = "Nome", @class = "form-control" })
                                        @Html.ValidationMessageFor(u => u.Nome)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Login">E-mail/Login</label>
                                    <div class="col-md-7">
                                        @Html.HiddenFor(u => u.Login)
                                        @Html.TextBoxFor(u => u.Login, new { placeholder = "E-mail do usuário", name = "email", type = "email", @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(u => u.Login)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Senha">Senha</label>
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(u => u.Senha, new { placeholder = "Senha do usuário", name = "senha", type = "password", @class = "form-control" })
                                        @Html.ValidationMessageFor(u => u.Senha)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-3 control-label" for="Perfis">Credencial</label>
                                    <div class="col-md-3">
                                        @Html.HiddenFor(u => u.PerfilUsuario)
                                        @Html.DropDownListFor(u => u.Perfil, (IEnumerable<SelectListItem>)ViewBag.Perfis, new { @class = "form-control perfis", @disabled = "disabled" })
                                    </div>
                                    <div class="col-md-6"></div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-md-10"></div>
                                    <div class="col-md-2">
                                        <button type="submit" id="btnEditar" class="btn btn-fill btn-primary">Editar</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $("#miolo").addClass("card-wizard");
    </script>

}

